<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/audio_gain_background"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10.0px"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textsystem"
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
          />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textradio"
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
             />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textdvd"
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textbluetooth"
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textavin"
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
           />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/texttv"
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240.0px"
        android:layout_gravity="center_horizontal|top"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/seekbar_scale" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="match_parent"
            android:gravity="center" >

            <com.common.view.VerticalSeekBar
                android:id="@+id/seekbar_system"
                style="@style/SeekBarStyle" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="match_parent"
            android:gravity="center" >

            <com.common.view.VerticalSeekBar
                android:id="@+id/seekbar_radio"
                style="@style/SeekBarStyle" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="match_parent"
            android:gravity="center" >

            <com.common.view.VerticalSeekBar
                android:id="@+id/seekbar_dvd"
                style="@style/SeekBarStyle" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="match_parent"
            android:gravity="center" >

            <com.common.view.VerticalSeekBar
                android:id="@+id/seekbar_bt"
                style="@style/SeekBarStyle" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="match_parent"
            android:gravity="center" >

            <com.common.view.VerticalSeekBar
                android:id="@+id/seekbar_av"
                style="@style/SeekBarStyle" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="match_parent"
            android:gravity="center" >

            <com.common.view.VerticalSeekBar
                android:id="@+id/seekbar_tv"
                style="@style/SeekBarStyle" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10.0px"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/system" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/radio" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/video_out_dvd" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/key_bt" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/video_out_av" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/audio_gain_gap"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/video_out_tv" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20.0px"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <Button
            android:id="@+id/restore"
            android:layout_width="120.0dip"
            android:layout_height="wrap_content"
            android:text="@string/restore_default" />
    </LinearLayout>

</LinearLayout>
