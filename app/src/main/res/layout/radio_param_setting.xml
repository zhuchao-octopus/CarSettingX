<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="horizontal">
	<Button android:id="@+id/radio_default" android:text="@string/radio_default"  android:layout_weight="1"
		android:textSize="30sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	<Button android:id="@+id/radio_dec" android:text="@string/radio_dec"  android:layout_weight="1"
		android:textSize="30sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	<TextView android:id="@+id/radio_param" android:layout_weight="1"
		android:textSize="30sp" android:layout_width="match_parent" android:layout_height="wrap_content" 
		android:gravity ="center_horizontal"/>	
	<Button android:id="@+id/radio_inc" android:text="@string/radio_inc" android:layout_weight="1"
		android:textSize="30sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	<Button android:id="@+id/radio_listening" android:text="@string/listening_test" android:layout_weight="1"
		android:textSize="30sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>