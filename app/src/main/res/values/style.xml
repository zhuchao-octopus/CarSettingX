<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ListViewText">
        <item name="android:shadowColor">#555555</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">20px</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:shadowColor">#555555</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">100px</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">3px</item>
        <item name="android:layout_marginBottom">3px</item>
        <item name="android:layout_marginLeft">10px</item>
    </style>

      <style name="TranslucentTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper.NoTitleBar">

        <!-- API 19 theme customizations can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        
        <!-- Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色 -->

<!--         <item name="android:windowBackground">@null</item> -->
<!--         <item name="android:statusBarColor">@android:color/transparent</item> -->
    </style>
    
        <style name="VideoOutRadio">
        <item name="android:checked">true</item>
        <item name="android:textSize">32px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
    </style>
    
    <style name="CanboxText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">32px</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <style name="SeekBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">32.0px</item>
		<item name="android:paddingLeft">15.0px</item>     
        <item name="android:paddingRight">43.0px</item>        
        <item name="android:background">@drawable/vseekbar_bg</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:focusable">false</item>
        <item name="android:max">20</item>
        <item name="android:progress">10</item>
    </style>
    
